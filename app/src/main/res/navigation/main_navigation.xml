<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.ardhacodes.subs1_jetpack.ui.movie.MovieFragment"
        android:label="@string/toolbar_title_movie"
        tools:layout="@layout/fragment_movie" />
    <fragment
        android:id="@+id/navigation_tvshow"
        android:name="com.ardhacodes.subs1_jetpack.ui.tv.TvFragment"
        android:label="@string/toolbar_title_tvshow"
        tools:layout="@layout/fragment_tv" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.ardhacodes.subs1_jetpack.ui.favorite.FavoriteFragment"
        android:label="@string/bottom_nav_title_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/navigation_favorite_movie"
        android:name="com.ardhacodes.subs1_jetpack.ui.favorite.moviefavorite.MovieFavFragment"
        android:label="fragment_favorite_movie"
        tools:layout="@layout/fragment_movie_fav" />
    <fragment
        android:id="@+id/navigation_favorite_tvshow"
        android:name="com.ardhacodes.subs1_jetpack.ui.favorite.tvfavorite.TvFavFragment"
        android:label="fragment_favorite_tv_show"
        tools:layout="@layout/fragment_tv_fav" />
</navigation>